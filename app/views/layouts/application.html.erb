<!DOCTYPE html>
<html>
  <head>
    <title>Flipme</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Cabin&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/b3bfcf250f.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Lexend+Deca&display=swap" rel="stylesheet">
    <script type="text/javascript">
      window.dlmnice = "<%= image_url('dlmnice.png') %>";
      window.birdo = "<%= image_url('birdo.jpg') %>";
      window.splash = "<%= image_url('splash1.jpg') %>";
    </script>
  </head>

  <body>
  
  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId      : '1070281493341899',
        cookie     : true,
        xfbml      : true,
        version    : 'v6.0'
      });
        
      FB.AppEvents.logPageView();   
        
    };

    (function(d, s, id){
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) {return;}
      js = d.createElement(s); js.id = id;
      js.src = "https://connect.facebook.net/en_US/sdk.js";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  </script>
    <%= yield %>
  </body>
</html>
